{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "newLine": "LF",
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "files": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}